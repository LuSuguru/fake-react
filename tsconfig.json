{
  "compilerOptions": {
    "noEmit": true,
    "target": "es6",
    "module": "esnext",
    "noImplicitAny": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "allowJs": false,
    "strict": false,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2017"
    ],
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}